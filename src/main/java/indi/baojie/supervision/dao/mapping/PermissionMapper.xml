<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.baojie.supervision.dao.PermissionMapper">

    <sql id="Base_Column_List">
        id, parent_id, name, url, type, sort
    </sql>
    
    <select id="findOne" parameterType="indi.baojie.supervision.domain.Permission" resultType="indi.baojie.supervision.domain.Permission">
        select * from permission
        where id = #{id}
    </select>

    <select id="find" parameterType="indi.baojie.supervision.domain.Permission" resultType="indi.baojie.supervision.domain.Permission">
        select * from permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
    </select>

    <select id="count" parameterType="indi.baojie.supervision.domain.Permission" resultType="int">
        select count(*) from permission

    </select>

    <insert id="insert" parameterType="indi.baojie.supervision.domain.Permission">
        insert into role(parent_id, name, url, type, sort)
        values(#{parentId}, #{name}, #{url}, #{type}, #{sort})
    </insert>

</mapper>